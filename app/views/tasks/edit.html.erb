<h1>Edit Task</h1>
<div class="container p-3 border bg-light rounded">
  <%= form_with(model: @task, local: true) do |form| %>
    <div>
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :details, class: 'form-label' %>
      <%= form.text_area :details, class: 'form-control', rows: 5 %>
    </div>

    <div class="mb-3 mt-1">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, class: 'form-check-label ms-2' %>
    </div>

    <div>
      <%= form.submit 'Mettre à jour', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to tasks_path, class: 'btn btn-secondary' do %>
      <i class="fa fa-history me-1"></i> Retour à la liste
    <% end %>
  </div>
</div>

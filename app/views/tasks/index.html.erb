<h2>Task Manager</h2>

<div class="container p-3 border bg-light rounded">
  <%= link_to 'Nouvelle tache', new_task_path, class: 'btn btn-primary w-100' %>
  <table class="container mt-4 p-3 text-center">
    <thead>
      <tr>
        <th>Titre</th>
        <th>DÃ©tails</th>
        <th>Done</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.details %></td>
          <td>
          <% if task.completed %>
            <i class="fa-solid fa-square-check btn btn-primary"></i>
          <% else %>
            <i class="fa-solid fa-square btn btn-primary"></i>
          <% end %>
        </td>

          <td class="m-2">
            <%= link_to edit_task_path(task), class: 'btn btn-warning m-3' do %>
              <i class="fa-solid fa-user-pen"></i>
            <% end %>
            <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

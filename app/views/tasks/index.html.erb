<h2>Task Manager</h2>

<%= link_to 'Nouvelle tache', new_task_path, class: 'btn btn-primary' %>

<table class="container mt-4 p-3">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Done</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td>
        <% if task.completed %>
          <i class="fa-solid fa-square-check btn btn-primary"></i>
        <% else %>
          <i class="fa-solid fa-square btn btn-primary"></i>
        <% end %>
      </td>

        <td class="m-2">
          <%= link_to edit_task_path(task), class: 'btn btn-warning m-3' do %>
            <i class="fa-solid fa-user-pen"></i>
          <% end %>
          <br>
          <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
